<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<body>
    <header>
        <!-- As a link -->
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">File Operations</a>
            </div>
        </nav>

        <!-- As a heading -->
        <nav class="navbar navbar-light bg-light">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1">Using File Module</span>
            </div>
        </nav>
    </header>
    <main>
        <div class="overlay"></div>
        <div>
            <button type="button" class="btn btn-primary" onclick="window.location.href='/make_folder'">Create
                Folder</button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='/make_file'">Create File
                inside Folder</button>
            <button type="button" class="btn btn-success" onclick="window.location.href='/write_data'">Write to
                File</button>
            <button type="button" class="btn btn-danger" onclick="window.location.href='/add_data'">Append to
                file</button>
            <button type="button" class="btn btn-warning" onclick="window.location.href='/read_data'">Read File</button>
            <button type="button" class="btn btn-info" onclick="window.location.href='/rm_file'">Delete File</button>
            <button type="button" class="btn btn-light" onclick="window.location.href='/rm_folder'">Delete
                Folder</button>
            <button type="button" class="btn btn-dark" onclick="window.location.href='/show_folder'">check  files in current
                directory</button>
            <!-- The HTML5 video element that will create the background video on the header -->
            <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
                <source src="https://storage.googleapis.com/coverr-main/mp4/Mt_Baker.mp4" type="video/mp4">

            </video>

            <!-- The header content -->
            <div class="container h-50">
                <div class="d-flex h-100 text-center align-items-center">
                    <div class="w-100 text-white">
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Page section example for content below the video header -->

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
